<%= simple_form_for @post do |f| %>
  <div class="field">
    <div class="control">
      <%= f.input :title,
        input_html: { class: 'input', placeholder: 'Post title', value: @post.title },
        wrapper: false,
        label_html: { class: 'label' }
      %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :content,
        input_html: { class: 'textarea', placeholder: 'Post content', value: @post.content },
        wrapper: false,
        label_html: { class: 'label' }
      %>
    </div>
  </div>
  <%= f.button :submit, submit_button_text, class: 'button is-primary' %>
<% end %>
