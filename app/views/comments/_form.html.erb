<%= simple_form_for ([@post, @post.comments.build]) do |f| %>
  <div class="field">
    <div class="control">
      <%= f.input :name,
        input_html: { class: 'input', placeholder: 'Name' },
        wrapper: false,
        label_html: { class: 'label' }
      %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :comment,
        input_html: { class: 'textarea', placeholder: 'Comment' },
        wrapper: false,
        label_html: { class: 'label' }
      %>
    </div>
  </div>
  <%= f.button :submit, 'Add comment', class: 'button is-primary' %>
<% end %>
